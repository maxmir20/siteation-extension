{
  "manifest_version": 3,
  "name": "Siteation",
  "version": "1.0.0",
  "description": "Monitors tab navigation and displays integers on badge based on API responses",
  
  "permissions": [
    "tabs",
    "storage",
    "clipboardWrite",
    "scripting"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "Siteation\nSingle click: Add siteation\nDouble click: Copy siteations(github.com only)",
    "default_icon": "images/icon_16.png"
  },

  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },

  "host_permissions": [
    "https://site-ation.onrender.com/*",
    "https://github.com/*"
  ]
}
